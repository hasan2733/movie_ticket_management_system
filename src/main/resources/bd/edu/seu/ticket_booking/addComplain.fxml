<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: linear-gradient(to bottom right, #0F2027, #203A43, #2C5364);                    -fx-padding: 20;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.edu.seu.ticket_booking.CustomerContoller.AddComplainController">

   <children>

      <Label layoutX="250.0" layoutY="30.0" text="Add Complaint" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="24.0" />
         </font>
      </Label>


      <Label layoutX="100.0" layoutY="100.0" text="User Name" textFill="#ECF0F1">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label fx:id="userLabel" layoutX="220.0" layoutY="98.0" prefHeight="30.0" prefWidth="300.0" style="-fx-text-fill: white; -fx-font-size: 15px;" />


      <Label layoutX="100.0" layoutY="160.0" text="Type of Complaint" textFill="#ECF0F1">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <ComboBox fx:id="complainComboBox" layoutX="220.0" layoutY="190.0" prefHeight="35.0" prefWidth="320.0" promptText="Select complaint type" style="-fx-background-radius: 10; -fx-border-color: #5DADE2; -fx-border-radius: 10; -fx-border-width: 1.5; -fx-font-size: 14; -fx-background-color: white; -fx-text-fill: Black;" />


      <Label layoutX="100.0" layoutY="245.0" text="Write Details" textFill="#ECF0F1">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextArea fx:id="textArea" layoutX="220.0" layoutY="270.0" prefHeight="120.0" prefWidth="320.0" promptText="Describe your complaint here..." style="-fx-background-radius: 12; -fx-control-inner-background: white; -fx-text-fill: black; -fx-prompt-text-fill: #aaaaaa; -fx-border-radius: 12; -fx-border-width: 1.5;" />


      <Button layoutX="300.0" layoutY="420.0" mnemonicParsing="false" onAction="#addComplain" style="-fx-background-color: linear-gradient(to right, #ff416c, #ff4b2b);                        -fx-background-radius: 15;                        -fx-font-weight: bold;                        -fx-font-size: 14;                        -fx-text-fill: white;                        -fx-cursor: hand;                        -fx-padding: 8 20;" text="Submit Complaint">
         <effect>
            <DropShadow color="#FF7675" radius="10" spread="0.2" />
         </effect>
      </Button>


      <Button layoutX="600.0" layoutY="20.0" mnemonicParsing="false" onAction="#backEvent" style="-fx-background-color: linear-gradient(to right, #36d1dc, #5b86e5);                        -fx-text-fill: white;                        -fx-font-weight: bold;                        -fx-font-size: 13;                        -fx-background-radius: 12;                        -fx-padding: 6 16;                        -fx-cursor: hand;" text="Back">
         <effect>
            <DropShadow color="#5DADE2" radius="10" spread="0.2" />
         </effect>
      </Button>

   </children>
</AnchorPane>
