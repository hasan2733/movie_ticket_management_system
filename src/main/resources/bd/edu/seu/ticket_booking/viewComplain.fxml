<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: linear-gradient(to bottom right, #0F2027, #203A43, #2C5364);                    -fx-padding: 20;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.edu.seu.ticket_booking.AdminController.ViewComplainController">

   <children>
      <Label layoutX="230.0" layoutY="20.0" text="View Complaints" textFill="white">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Label>


      <TextField fx:id="searchField" layoutX="40.0" layoutY="70.0" onKeyReleased="#searchEvent" prefHeight="35.0" prefWidth="620.0" promptText="Search complaints..." style="-fx-background-radius: 10;                         -fx-background-color: #2C3E50;                         -fx-text-fill: white;                         -fx-prompt-text-fill: #aaaaaa;                         -fx-border-color: #5DADE2;                         -fx-border-radius: 10;                         -fx-border-width: 1.5;" />


      <TableView fx:id="tableView" layoutX="40.0" layoutY="120.0" prefHeight="180.0" prefWidth="620.0" style="-fx-background-radius: 10;                         -fx-border-radius: 10;                         -fx-border-color: #5DADE2;                         -fx-background-color: rgba(255,255,255,0.05);                         -fx-control-inner-background: rgba(255,255,255,0.05);                         -fx-table-cell-border-color: transparent;                         -fx-text-fill: white;">
         <columns>
            <TableColumn fx:id="nameC" prefWidth="150.0" text="User Name" />
            <TableColumn fx:id="typeC" prefWidth="180.0" text="Type of Complaint" />
            <TableColumn fx:id="commentsC" prefWidth="270.0" text="Comments" />
         </columns>
      </TableView>


      <Label layoutX="40.0" layoutY="320.0" text="User Name" textFill="white">
         <font><Font size="15.0" /></font>
      </Label>
      <Label fx:id="nameLabel" layoutX="40.0" layoutY="345.0" prefHeight="25.0" prefWidth="250.0" style="-fx-text-fill: #AED6F1; -fx-font-size: 14;" />

      <Label layoutX="40.0" layoutY="380.0" text="Type of Complaint" textFill="white">
         <font><Font size="15.0" /></font>
      </Label>
      <Label fx:id="typeOfComplainLabel" layoutX="40.0" layoutY="405.0" prefHeight="25.0" prefWidth="250.0" style="-fx-text-fill: #AED6F1; -fx-font-size: 14;" />


      <TextArea fx:id="datailsComments" layoutX="330.0" layoutY="320.0" prefHeight="150.0" prefWidth="330.0" promptText="Complaint details..." style="-fx-background-radius: 10; -fx-control-inner-background: White; -fx-text-fill: black; -fx-prompt-text-fill: #aaaaaa; -fx-border-color: #5DADE2; -fx-border-radius: 10; -fx-border-width: 1.5;" />


      <Button layoutX="600.0" layoutY="20.0" mnemonicParsing="false" onAction="#backEvent" style="-fx-background-color: linear-gradient(to right, #36d1dc, #5b86e5);                      -fx-text-fill: white;                      -fx-font-weight: bold;                      -fx-font-size: 14;                      -fx-background-radius: 12;                      -fx-padding: 6 16;                      -fx-cursor: hand;" text="Back">
         <effect>
            <DropShadow color="#5DADE2" radius="8" spread="0.15" />
         </effect>
      </Button>
   </children>
</AnchorPane>
