<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom right,#141E30,#243B55);                    -fx-padding: 20;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.edu.seu.ticket_booking.AdminController.AdminRegistrationController">
   <children>

      <VBox alignment="CENTER" layoutX="90.0" layoutY="14.0" prefHeight="378.0" prefWidth="419.0" spacing="12" style="-fx-background-color: rgba(255,255,255,0.1);                    -fx-background-radius: 20;                    -fx-padding: 25 25 25 25;                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4),15,0,0,8);">

         <Label style="-fx-text-fill: white;                        -fx-font-size: 24;                        -fx-font-weight: bold;" text="Admin Registration" />

         <TextField fx:id="nameField" promptText="Full Name" style="-fx-background-color: rgba(255,255,255,0.2);                            -fx-text-fill: white;                            -fx-prompt-text-fill: rgba(255,255,255,0.7);                            -fx-background-radius: 8;                            -fx-padding: 6 10 6 10;" />

         <TextField fx:id="usernameField" promptText="Username" style="-fx-background-color: rgba(255,255,255,0.2);                            -fx-text-fill: white;                            -fx-prompt-text-fill: rgba(255,255,255,0.7);                            -fx-background-radius: 8;                            -fx-padding: 6 10 6 10;" />

         <TextField fx:id="emailField" promptText="Email" style="-fx-background-color: rgba(255,255,255,0.2);                            -fx-text-fill: white;                            -fx-prompt-text-fill: rgba(255,255,255,0.7);                            -fx-background-radius: 8;                            -fx-padding: 6 10 6 10;" />

         <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: rgba(255,255,255,0.2);                                -fx-text-fill: white;                                -fx-prompt-text-fill: rgba(255,255,255,0.7);                                -fx-background-radius: 8;                                -fx-padding: 6 10 6 10;" />

         <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" style="-fx-background-color: rgba(255,255,255,0.2);                                -fx-text-fill: white;                                -fx-prompt-text-fill: rgba(255,255,255,0.7);                                -fx-background-radius: 8;                                -fx-padding: 6 10 6 10;" />

         <Button onAction="#registerEvent" style="-fx-background-color: linear-gradient(to right,#ff512f,#dd2476);                         -fx-text-fill: white;                         -fx-font-weight: bold;                         -fx-background-radius: 20;                         -fx-cursor: hand;                         -fx-padding: 6 14 6 14;" text="Register" />

         <Button onAction="#backTologinEvent" style="-fx-background-color: transparent;                         -fx-border-color: white;                         -fx-border-radius: 20;                         -fx-text-fill: white;                         -fx-padding: 6 14 6 14;                         -fx-cursor: hand;" text="Back to Login" />
      </VBox>
   </children>
</AnchorPane>
