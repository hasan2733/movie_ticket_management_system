<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color:#f5f7fa;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bd.edu.seu.ticket_booking.AdminController.RevenueReportController">

    <children>
        <StackPane layoutX="0" layoutY="0" prefHeight="60" prefWidth="600">
            <children>
                <Rectangle width="600" height="60" arcHeight="20" arcWidth="20">
                    <fill>
                        <LinearGradient startX="0" startY="0" endX="1" endY="0">
                            <stops>
                                <Stop offset="0" color="#6a11cb"/>
                                <Stop offset="1" color="#2575fc"/>
                            </stops>
                        </LinearGradient>
                    </fill>
                </Rectangle>
                <Label text="Revenue Chart" textFill="white">
                    <font>
                        <Font name="Segoe UI Semibold" size="22"/>
                    </font>
                </Label>
            </children>
        </StackPane>


        <Button layoutX="520.0" layoutY="14.0"
                mnemonicParsing="false" onAction="#backEvent"
                text="Back"
                style="-fx-background-color: white;
                       -fx-text-fill: #2575fc;
                       -fx-font-weight: bold;
                       -fx-background-radius: 20;
                       -fx-cursor: hand;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 4,0,0,2);" />


        <BarChart fx:id="revenueBarChart"
                  layoutX="20.0" layoutY="70.0"
                  prefWidth="560.0" prefHeight="260.0"
                  style="-fx-background-color: white;
                         -fx-background-radius: 15;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8,0,0,4);"
                  legendVisible="false"
                  title="Movie Revenue (BDT)">
            <xAxis>
                <CategoryAxis fx:id="movieAxis" label="Movie Title" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="revenueAxis" label="Revenue (BDT)" />
            </yAxis>
        </BarChart>


        <Label text="Total Revenue:"
               layoutX="40.0" layoutY="350.0"
               style="-fx-font-weight: bold;
                      -fx-font-size: 16;
                      -fx-text-fill: #333;" />
        <Label fx:id="revenueLabel"
               layoutX="170.0" layoutY="350.0"
               style="-fx-font-size: 16;
                      -fx-text-fill: #2575fc;" />
    </children>
</AnchorPane>