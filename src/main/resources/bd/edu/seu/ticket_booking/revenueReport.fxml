<AnchorPane prefHeight="502.0" prefWidth="700.0" style="-fx-background-color:#f5f7fa;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.edu.seu.ticket_booking.AdminController.RevenueReportController">

    <children>
        <StackPane layoutX="0" layoutY="0" prefHeight="60" prefWidth="600">
            <children>
                <Rectangle arcHeight="20" arcWidth="20" height="60" width="699.0">
                    <fill>
                        <LinearGradient endX="1" endY="0" startX="0" startY="0">
                            <stops>
                                <Stop color="#6a11cb" offset="0" />
                                <Stop color="#2575fc" offset="1" />
                            </stops>
                        </LinearGradient>
                    </fill>
                </Rectangle>
                <Label text="Revenue Chart" textFill="white">
                    <font>
                        <Font name="Segoe UI Semibold" size="22" />
                    </font>
                </Label>
            </children>
        </StackPane>

      
              <Button layoutX="520.0" layoutY="14.0" mnemonicParsing="false" onAction="#backEvent" style="-fx-background-color: white;                        -fx-text-fill: #2575fc;                        -fx-font-weight: bold;                        -fx-background-radius: 20;                        -fx-cursor: hand;                        -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 4,0,0,2);" text="Back" />


        <BarChart fx:id="revenueBarChart" layoutX="14.0" layoutY="105.0" legendVisible="false" prefHeight="260.0" prefWidth="662.0" style="-fx-background-color: white;                          -fx-background-radius: 15;                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8,0,0,4);" title="Movie Revenue (BDT)">
            <xAxis>
                <CategoryAxis fx:id="movieAxis" label="Movie Title" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="revenueAxis" label="Revenue (BDT)" />
            </yAxis>
        </BarChart>


        <Label layoutX="40.0" layoutY="400.0" style="-fx-font-weight: bold;                       -fx-font-size: 16;                       -fx-text-fill: #333;" text="Total Revenue:" />
        <Label fx:id="revenueLabel" layoutX="172.0" layoutY="399.0" prefHeight="26.0" prefWidth="158.0" style="-fx-font-size: 16;                       -fx-text-fill: #2575fc;" />
    </children>
</AnchorPane>
