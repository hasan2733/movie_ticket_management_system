<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: linear-gradient(to bottom, #141E30, #243B55);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.edu.seu.ticket_booking.CustomerContoller.CustomerRegistrationController">

   <children>
      <TextField fx:id="nameField" layoutX="135.0" layoutY="73.0" prefHeight="35" prefWidth="430.0" promptText="Enter full name" style="-fx-background-radius: 8; -fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6;" />
      <TextField fx:id="emailField" layoutX="135.0" layoutY="129.0" prefHeight="35" prefWidth="430.0" promptText="Enter email address" style="-fx-background-radius: 8; -fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6;" />

     
      <Label layoutX="206.0" layoutY="25.0" style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;" text=" Customer Registration " />
      <TextField fx:id="phoneField" layoutX="135.0" layoutY="179.0" prefHeight="35" prefWidth="430.0" promptText="Enter phone number" style="-fx-background-radius: 8; -fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6;" />
      <Button layoutX="150.0" layoutY="424.0" onAction="#registerEvent" prefHeight="40" prefWidth="140" style="-fx-background-color: linear-gradient(to right, #ff512f, #dd2476);                                -fx-text-fill: white; -fx-font-weight: bold;                                -fx-background-radius: 10; -fx-cursor: hand;" text="Register" />

      <Button layoutX="474.0" layoutY="424.0" onAction="#backToLoginEvent" prefHeight="40" prefWidth="140" style="-fx-background-color: linear-gradient(to right, #36d1dc, #5b86e5);                                -fx-text-fill: white; -fx-font-weight: bold;                                -fx-background-radius: 10; -fx-cursor: hand;" text="Back to Login" />
      <PasswordField fx:id="confirmPasswordField" layoutX="135.0" layoutY="289.0" prefHeight="35" prefWidth="430.0" promptText="Re-enter password" style="-fx-background-radius: 8; -fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6;" />
      <PasswordField fx:id="passwordField" layoutX="135.0" layoutY="232.0" prefHeight="35" prefWidth="430.0" promptText="Enter password" style="-fx-background-radius: 8; -fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6;" />
      <PasswordField fx:id="otp" layoutX="135.0" layoutY="337.0" prefHeight="35" prefWidth="303.0" promptText="Type Otp" style="-fx-background-radius: 8; -fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6;" />
      <Button layoutX="451.0" layoutY="337.0" onAction="#sendEmailEvent" prefHeight="40" prefWidth="108.0" style="-fx-background-color: linear-gradient(to right, #ff512f, #dd2476);                                -fx-text-fill: white; -fx-font-weight: bold;                                -fx-background-radius: 10; -fx-cursor: hand;" text="Send Email" />
   </children>
</AnchorPane>
