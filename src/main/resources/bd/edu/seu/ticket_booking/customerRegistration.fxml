<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="650.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bd.edu.seu.ticket_booking.CustomerContoller.CustomerRegistrationController"
            style="-fx-background-color: linear-gradient(to bottom, #141E30, #243B55);">

   <children>
      <VBox alignment="CENTER" spacing="15"
            AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
            AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

         <!-- Title -->
         <Label text=" Customer Registration "
                style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;" />

         <!-- Form -->
         <VBox spacing="12" prefWidth="450" style="-fx-background-color: rgba(255,255,255,0.08);
                                                      -fx-padding: 25; -fx-background-radius: 12;">
            <HBox spacing="10" alignment="CENTER_LEFT">
               <Label text="Full Name:" style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px; -fx-font-weight: bold;" />
               <TextField fx:id="nameField" promptText="Enter full name"
                          style="-fx-background-radius: 8; -fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6;"
                          prefHeight="35" prefWidth="300" />
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
               <Label text="Email:" style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px; -fx-font-weight: bold;" />
               <TextField fx:id="emailField" promptText="Enter email address"
                          style="-fx-background-radius: 8; -fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6;"
                          prefHeight="35" prefWidth="300" />
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
               <Label text="Phone:" style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px; -fx-font-weight: bold;" />
               <TextField fx:id="phoneField" promptText="Enter phone number"
                          style="-fx-background-radius: 8; -fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6;"
                          prefHeight="35" prefWidth="300" />
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
               <Label text="Password:" style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px; -fx-font-weight: bold;" />
               <PasswordField fx:id="passwordField" promptText="Enter password"
                              style="-fx-background-radius: 8; -fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6;"
                              prefHeight="35" prefWidth="300" />
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
               <Label text="Confirm Password:" style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px; -fx-font-weight: bold;" />
               <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password"
                              style="-fx-background-radius: 8; -fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6;"
                              prefHeight="35" prefWidth="300" />
            </HBox>
         </VBox>

         <!-- Buttons -->
         <HBox spacing="20" alignment="CENTER">
            <Button text="Register" onAction="#registerEvent"
                    style="-fx-background-color: linear-gradient(to right, #ff512f, #dd2476);
                               -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-background-radius: 10; -fx-cursor: hand;"
                    prefWidth="140" prefHeight="40" />

            <Button text="Back to Login" onAction="#backToLoginEvent"
                    style="-fx-background-color: linear-gradient(to right, #36d1dc, #5b86e5);
                               -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-background-radius: 10; -fx-cursor: hand;"
                    prefWidth="140" prefHeight="40" />
         </HBox>

      </VBox>
   </children>
</AnchorPane>