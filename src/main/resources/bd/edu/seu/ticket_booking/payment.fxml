<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bd.edu.seu.ticket_booking.CustomerContoller.PaymentController">

   <children>
      <Label layoutX="20.0" layoutY="20.0" text="Payment"
             style="-fx-font-size: 18px; -fx-font-weight: bold;" />


      <Label layoutX="20.0" layoutY="60.0" text="Movie:" style="-fx-font-weight: bold;" />
      <Label fx:id="movieLabel" layoutX="80.0" layoutY="60.0" />

      <Label layoutX="20.0" layoutY="90.0" text="Show Date &amp; Time:" style="-fx-font-weight: bold;" />
      <Label fx:id="showTimeLabel" layoutX="140.0" layoutY="90.0" />

      <Label layoutX="20.0" layoutY="120.0" text="Seats:" style="-fx-font-weight: bold;" />
      <Label fx:id="seatsLabel" layoutX="80.0" layoutY="120.0" />

      <Label layoutX="20.0" layoutY="150.0" text="Total Amount:" style="-fx-font-weight: bold;" />
      <Label fx:id="totalAmountLabel" layoutX="120.0" layoutY="150.0"
             style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" />


      <Label layoutX="20.0" layoutY="180.0" text="Coupon Code:" style="-fx-font-weight: bold;" />
      <TextField fx:id="couponField" layoutX="120.0" layoutY="175.0" prefWidth="150.0"
                 promptText="Enter coupon" />
      <Button text="Apply" layoutX="280.0" layoutY="175.0" onAction="#applyCoupon"
              style="-fx-background-color:#27ae60; -fx-text-fill:white; -fx-background-radius:5;" />

      <Label fx:id="discountLabel" layoutX="120.0" layoutY="205.0"
             style="-fx-text-fill: #27ae60;" />

      <Separator layoutX="20.0" layoutY="230.0" prefWidth="560.0" />


      <Label layoutX="20.0" layoutY="250.0" text="Enter Payment Amount:" style="-fx-font-weight: bold;" />
      <TextField fx:id="paymentAmountField" layoutX="170.0" layoutY="245.0" prefWidth="150.0"
                 promptText="Enter amount" />

      <Label layoutX="20.0" layoutY="280.0" text="Payment Status:" style="-fx-font-weight: bold;" />
      <Label fx:id="paymentStatusLabel" layoutX="140.0" layoutY="280.0" text="Not processed"
             style="-fx-text-fill: #e74c3c;" />


      <Button layoutX="120.0" layoutY="330.0" text="Process Payment" onAction="#processPayment"
              style="-fx-background-color: linear-gradient(to right,#43cea2, #185a9d); -fx-text-fill: white; -fx-font-weight: bold;" />
      <Button layoutX="280.0" layoutY="330.0" text="Generate Ticket" onAction="#generateTicket"
              style="-fx-background-color: linear-gradient(to right,#3498db, #2c3e50); -fx-text-fill: white; -fx-font-weight: bold;" />
      <Button layoutX="440.0" layoutY="330.0" text="Back" onAction="#backToBooking"
              style="-fx-background-color: linear-gradient(to right,#ff512f, #dd2476); -fx-text-fill: white; -fx-font-weight: bold;" />
   </children>
</AnchorPane>