<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.edu.seu.ticket_booking.AdminController.ManageMoviesController">
    <children>
        <Label layoutX="282.0" layoutY="14.0" text="Manage Movies">
            <font>
                <Font name="System Bold" size="21.0" />
            </font>
        </Label>
        <Button layoutX="25.0" layoutY="45.0" mnemonicParsing="false" onAction="#addNewMovieEvent" style="-fx-background-color: linear-gradient(to right, #56ab2f, #a8e063);        -fx-text-fill: white;        -fx-font-weight: bold;        -fx-background-radius: 10;        -fx-cursor: hand;" text="Add new movies">
         <font>
            <Font size="14.0" />
         </font></Button>
        <Button layoutX="635.0" layoutY="43.0" mnemonicParsing="false" onAction="#backEvent" style="-fx-background-color: linear-gradient(to right,#ff512f, #dd2476);        -fx-text-fill: white;        -fx-font-weight: bold;        -fx-background-radius: 10;        -fx-cursor: hand;" text="Back">
         <font>
            <Font size="14.0" />
         </font></Button>
        <TableView fx:id="movieTable" layoutX="21.0" layoutY="135.0" prefHeight="223.0" prefWidth="667.0">
            <columns>
                <TableColumn fx:id="titleC" prefWidth="198.39996910095215" text="Title" />
                <TableColumn fx:id="genreC" minWidth="0.0" prefWidth="161.60003662109375" text="Genre" />
                <TableColumn fx:id="durationC" prefWidth="125.5999755859375" text="Duration" />
                <TableColumn fx:id="ratingC" prefWidth="180.79995727539062" text="IMDB Ratings" />
            </columns>
        </TableView>

        <Button fx:id="deleteButton" layoutX="227.0" layoutY="437.0" mnemonicParsing="false" onAction="#deleteSelectedMovie" style="-fx-background-color: linear-gradient(to right, #ff512f, #dd2476); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="Delete Selected Movie">
         <font>
            <Font size="14.0" />
         </font></Button>


        <TextField fx:id="searchField" layoutX="25.0" layoutY="96.0" prefHeight="26.0" prefWidth="667.0" promptText="search" />
    </children>
</AnchorPane>
