<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.edu.seu.ticket_booking.AdminController.ManageDiscountAndCouponController">

    <children>
        <Label layoutX="183.0" layoutY="14.0" text="Manage Discounts and Coupons">
            <font>
                <Font name="System Bold" size="21.0" />
            </font>
        </Label>


        <TableView fx:id="discountTable" layoutX="14.0" layoutY="50.0" prefHeight="330.0" prefWidth="678.0">
            <columns>
                <TableColumn fx:id="codeC" prefWidth="100" text="Code" />
                <TableColumn fx:id="typeC" prefWidth="150.40003204345703" text="Type" />
                <TableColumn fx:id="valueC" prefWidth="130.39996337890625" text="Value" />
                <TableColumn fx:id="applicableC" prefWidth="147.19998168945312" text="Applicable To" />
                <TableColumn fx:id="expiryDateC" prefWidth="150.4000244140625" text="Expiry Date" />
            </columns>
        </TableView>


        <Button fx:id="addNewDiscountEvent" layoutX="14.0" layoutY="426.0" mnemonicParsing="false" onAction="#addNewDiscountEvent" style="-fx-background-color: linear-gradient(to right, #56ab2f, #a8e063); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="Add new Discount">
         <font>
            <Font size="14.0" />
         </font></Button>

        <Button fx:id="backEvent" layoutX="213.0" layoutY="426.0" mnemonicParsing="false" onAction="#backEvent" style="-fx-background-color: linear-gradient(to right,#36d1dc, #5b86e5); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="Back">
         <font>
            <Font size="14.0" />
         </font></Button>

        <Button fx:id="deleteDiscountButton" layoutX="536.0" layoutY="426.0" mnemonicParsing="false" onAction="#deleteDiscountEvent" style="-fx-background-color: linear-gradient(to right,#e52d27, #b31217); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="Delete Selected">
         <font>
            <Font size="14.0" />
         </font></Button>
    </children>
</AnchorPane>
