<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bd.edu.seu.ticket_booking.AdminController.ManageDiscountAndCouponController">

    <children>
        <Label layoutX="120.0" layoutY="14.0" text="Manage Discounts and Coupons">
            <font>
                <Font name="System Bold" size="21.0" />
            </font>
        </Label>


        <TableView fx:id="discountTable" layoutX="14.0" layoutY="50.0" prefHeight="260.0" prefWidth="573.0">
            <columns>
                <TableColumn fx:id="codeC" prefWidth="100" text="Code" />
                <TableColumn fx:id="typeC" prefWidth="100" text="Type" />
                <TableColumn fx:id="valueC" prefWidth="80" text="Value" />
                <TableColumn fx:id="applicableC" prefWidth="150" text="Applicable To" />
                <TableColumn fx:id="expiryDateC" prefWidth="140" text="Expiry Date" />
            </columns>
        </TableView>


        <Button fx:id="addNewDiscountEvent" layoutX="30.0" layoutY="320.0" mnemonicParsing="false"
                onAction="#addNewDiscountEvent"
                style="-fx-background-color: linear-gradient(to right, #56ab2f, #a8e063); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;"
                text="Add new Discount" />

        <Button fx:id="backEvent" layoutX="220.0" layoutY="320.0" mnemonicParsing="false"
                onAction="#backEvent"
                style="-fx-background-color: linear-gradient(to right,#36d1dc, #5b86e5); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;"
                text="Back" />

        <Button fx:id="deleteDiscountButton" layoutX="430.0" layoutY="320.0" mnemonicParsing="false"
                onAction="#deleteDiscountEvent"
                style="-fx-background-color: linear-gradient(to right,#e52d27, #b31217); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;"
                text="Delete Selected" />
    </children>
</AnchorPane>